version: "3.9"
services:
  app:
    build: ./backend
    env_file: ./backend/.env
    depends_on: [db, redis]
    volumes: ["./backend:/var/www/html"]
  websockets:
    image: beyondcode/laravel-websockets:latest
    environment:
      - LARAVEL_WEBSOCKETS_HOST=0.0.0.0
    depends_on: [app, redis]
  db:
    image: postgres:16
    environment:
      POSTGRES_DB: poker
      POSTGRES_USER: poker
      POSTGRES_PASSWORD: poker
    ports: ["5432:5432"]
    volumes: ["pgdata:/var/lib/postgresql/data"]
  redis:
    image: redis:7
    ports: ["6379:6379"]
  nginx:
    image: nginx:alpine
    volumes:
      - ./deploy/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./backend/public:/var/www/html/public:ro
    ports: ["80:80"]
    depends_on: [app, websockets]
  frontend:
    build: ./frontend
    command: ["npm","run","dev","--","--host"]
    ports: ["5173:5173"]
    volumes: ["./frontend:/app"]
volumes:
  pgdata:
